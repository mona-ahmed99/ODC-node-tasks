{{>header}}

<div class="w-75 m-auto">
    <form method="post">
        <div class="my-3">
            <input type="text" placeholder="id" name="id" value="{{result.id}}" class="form-control" disabled>
        </div>

        <div class="my-3">
            <input type="text" placeholder="Book Name" name="bookName" value="{{result.bookName}}" class="form-control">
        </div>
        <div class="my-3">
            <input type="text" placeholder="Author" name="author" value="{{result.author}}" class="form-control">
        </div>
        <div class="my-3">
            <input type="text" placeholder="Section" name="section" value="{{result.section}}" class="form-control">
        </div>
        <div class="my-3">
            <input type="number" placeholder="Number of Pages" name="numOfPages" value="{{result.numOfPages}}" class="form-control">
        </div>

        <button class="btn btn-info" type="submit">update Book</button>
    </form>
</div>


{{>footer}}