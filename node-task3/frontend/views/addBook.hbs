{{>header}}

<div class="w-75 m-auto">
    <form method="post">
        <div class="my-3">
            <input type="text" placeholder="Book Name" name="bookName" class="form-control">
        </div>
        <div class="my-3">
            <input type="text" placeholder="Author" name="author" class="form-control">
        </div>
        <div class="my-3">
            <input type="text" placeholder="Section" name="section" class="form-control">
        </div>
        <div class="my-3">
            <input type="number" placeholder="Number of Pages" name="numOfPages" class="form-control">
        </div>

        <button class="btn btn-info" type="submit">Add Book</button>
    </form>
</div>


{{>footer}}